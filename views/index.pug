extends layout

block content
  .loginContainer
    if user 
      h1.welcomeMsg Welcome Back :) #{user.fullname}
      a(href="/log-out") LOG OUT 
    else 
      h1.welcomeMsg Please log in 
      if errorMsg 
        h2=errorMsg
      form.loginForm(action="/log-in" method="POST")
        label(for="username") Username 
        input(name="username" placeholder="Username/email" type="text")
        label(for="password") Password 
        input(name="password" placeholder="password" type="password")
        .loginButtons
          button.button Log In
          a.button(href="/sign-up") Register 
        h2.oauthHeader Log in with
        a.oauthLink(href="/auth/google") 
          img.oauthLogo(src="/images/google.png" alt="Log in with Google") 
          | Google